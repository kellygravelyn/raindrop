{
  "name": "Raindrop Color Scheme",
  "globals":
  {
    "background": "<%= Color::BACKGROUND %>",
    "foreground": "<%= Color::FOREGROUND %>",
    "caret": "<%= Color::CURSOR %>",
    "selection": "<%= Color::SELECTION %>",
  },
  "rules":
  [
    {
      "scope": "comment",
      "foreground": "<%= Color::PURPLE %>",
    },
    {
      "scope": "keyword, storage, support.type.stdint, punctuation.separator.inheritance.ruby",
      "foreground": "<%= Color::BLUE %>",
    },
    {
      "scope": "entity.other.inherited-class, entity.name.tag, entity.name.class",
      "foreground": "<%= Color::DARK_PURPLE %>",
    },
    {
      "scope": "string",
      "foreground": "<%= Color::GREEN %>",
    },
    {
      "scope": "constant.numeric",
      "foreground": "<%= Color::YELLOW %>",
    },
    {
      "scope": "invalid",
      "foreground": "<%= Color::RED %>"
    },
  ],
}
