{
  "name": "Raindrop",
  "semanticHighlighting": true,
  "colors": {
    "editor.background": "<%= background %>",
    "editor.foreground": "<%= foreground %>",
    "sideBar.background": "<%= Color::EXTRA_LIGHT_GRAY %>",
    "sideBar.foreground": "<%= foreground %>",
    "sideBarSectionHeader.foreground": "<%= foreground %>",
    "sideBarSectionHeader.background": "<%= Color::EXTRA_LIGHT_GRAY %>",
    "list.activeSelectionForeground": "<%= foreground %>",
    "list.activeSelectionBackground": "<%= Color::NEARLY_WHITE %>",
    "list.hoverBackground": "<%= Color::FADED_NEARLY_WHITE %>",
    "list.highlightForeground": "<%= foreground %>",
    "activityBar.background": "<%= Color::EXTRA_LIGHT_GRAY %>",
    "activityBar.foreground": "<%= foreground %>",
    "titleBar.activeBackground": "<%= title_bar %>",
    "statusBar.background": "<%= Color::PURPLE %>",
    "statusBar.foreground": "<%= foreground %>",
    "statusBar.noFolderBackground": "<%= Color::PURPLE %>",
    "statusBar.debuggingBackground": "<%= Color::PURPLE %>",
    "statusBarItem.remoteBackground": "<%= Color::PURPLE %>",
    "list.errorForeground": "<%= Color::RED %>",
    "gitDecoration.modifiedResourceForeground": "<%= foreground %>",
    "gitDecoration.untrackedResourceForeground": "<%= foreground %>"
  },
  "tokenColors": [
    <% text_mate_scopes.each do |s| %>
    {
      "scope": "<%= s['scope'] %>",
      "settings": {
        "foreground": "<%= s['foreground'] %>",
      },
    },
    <% end %>
  ]
}
